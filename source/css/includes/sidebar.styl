.sidebar
  background: color-sidebar
  top: 0
  left: 0
  position: fixed
  i:hover
    color: #BBB
  .sidebar-title
    display: none
    moz-user-select: -moz-none
    -moz-user-select: none
    -o-user-select:none
    -khtml-user-select:none
    -webkit-user-select:none
    -ms-user-select:none
    user-select:none
    i.fa
      cursor: pointer
    span
      cursor: default
  .sidebar-search
    display: block
    width: sidebar-btn-size
    height: sidebar-btn-size
    text-align: center
    line-height: sidebar-btn-size
    color: #fff
    border-bottom: 1px solid #666
  .sidebar-menu
    position: relative
    ul
      list-style: none
      margin: 10px 0 0 0
      padding: 0
      border: 0
      a:hover
        color: #BBB
      a
        display: block
        width: sidebar-btn-size
        height: sidebar-btn-size
        text-align: center
        line-height: sidebar-btn-size
        text-decoration: none
        cursor: auto
        color: #fff
        i
          font-size: 20px
          line-height: 20px
        span
          display: none
  @media mq-normal
    height: 100%
    width: sidebar-btn-size
  @media mq-large
    height: 100%
    width: sidebar-btn-size
  @media mq-mobile
    width: 100%
    .sidebar-title
      display: block
      height: sidebar-btn-size
      color: #fff
      font-size: 20px
      line-height: sidebar-btn-size
      i.fa
        height: sidebar-btn-size
        width: sidebar-btn-size
        line-height: sidebar-btn-size
        text-align: center
    .sidebar-search
      position: absolute
      top: 0
      right: 0
      //float: right
      border-bottom: 0
      border-left: 1px solid #404040
    .sidebar-menu
      display: none
      max-height: sidebar-btn-size * mobile-max-menu
      overflow-x: hidden
      overflow-y: auto
      margin-right: -20px
      border-top: 1px solid #404040
      ul
        clear: both
        li
          a
            font-size: 16px
            width: 100%
            text-align: left
            padding-left: 25px
            i
              font-size: 16px
              line-height: 16px
            span
              display: inline-block
              margin-left: 8px
    .sidebar-menu.show
      display: block